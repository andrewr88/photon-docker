{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ]

  "packageRules": [
    {
      "matchPatterns": ["^PHOTON_VERSION$"],
      "datasource": "github-tags",
      "packageName": "komoot/photon",
      "extractVersion": "^v?(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ]
}
